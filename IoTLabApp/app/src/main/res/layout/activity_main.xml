<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¿ Aquaponics IoT ðŸŸ"
            android:textSize="28sp"
            android:textColor="#4ecca3"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#16213e">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="System Status"
                    android:textSize="14sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tvDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPumpStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pump: --"
                    android:textSize="14sp"
                    android:textColor="#cccccc"
                    android:paddingTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Controls Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Refresh"
                android:textColor="#ffffff"
                android:backgroundTint="#4ecca3"/>

            <Switch
                android:id="@+id/switchAutoRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Auto"
                android:textColor="#ffffff"
                android:checked="true"/>

        </LinearLayout>

        <!-- Control Buttons Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnPumpToggle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Pump: ON"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:backgroundTint="#4ecca3"/>

            <Button
                android:id="@+id/btnLightToggle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Light: OFF"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:backgroundTint="#555555"/>

            <Button
                android:id="@+id/btnSimulateFailure"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Simulate Failure"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:backgroundTint="#e94560"/>

        </LinearLayout>

        <!-- Sensor Grid -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Row 1: Water Temp & Air Temp -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¡ï¸ Water Temp"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvWaterTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--Â°C"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¡ï¸ Air Temp"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvAirTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--Â°C"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2: pH & Dissolved Oxygen -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’§ pH"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvPH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¨ Dissolved Oâ‚‚"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvDO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- mg/L"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 3: Ammonia & Water Level -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âš—ï¸ Ammonia"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvAmmonia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- mg/L"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Water Level"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvWaterLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 4: EC & Humidity -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âš¡ EC"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvEC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- ÂµS/cm"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#16213e">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¦ Humidity"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textSize="22sp"
                            android:textColor="#4ecca3"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 5: Light (full width) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#16213e">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Light Intensity"
                        android:textSize="12sp"
                        android:textColor="#888888"/>
                    <TextView
                        android:id="@+id/tvLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-- lux"
                        android:textSize="22sp"
                        android:textColor="#4ecca3"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Last Update -->
        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last update: --"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingTop="8dp"/>

    </LinearLayout>
</ScrollView>